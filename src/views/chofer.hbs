            <form action="/agregar/chofer" method="POST">
                <div class="input-line-container">
                    <span class="name-input">Ingrese nombre y apellidos</span>
                    <input type="text" name="name" class="input-line" id="">
                </div>
                <div class="input-line-container">
                    <span class="name-input">Ingrese su rut</span>
                    <input type="text" name="rut" class="input-line" id="">
                </div>
                <div class="input-line-container">
                    <span class="name-input">Patente de su Vehiculo</span>
                    <input type="text" name="patente" class="input-line" id="">
                </div>
                <div class="input-line-container">
                    <span class="name-input">Marca Vehiculo</span>
                    <input type="text" name="marca" class="input-line" id="">
                </div>
                <div class="input-line-container">
                    <span class="name-input">Modelo Vehiculo</span>
                    <input type="text" name="modelo" class="input-line" id="">
                </div>
                <div class="input-line-container">
                    <span class="name-input">A침o Vehiculo</span>
                    <input type="text" name="fecha" class="input-line" id="">
                </div>
                <div class="input-line-container">
                    <span class="name-input">Contrase침a</span>
                    <input type="password" name="confirm_password" class="input-line" id="">
                </div>
                <div class="input-line-container">
                    <span class="name-input">Confirmar Contrase침a</span>
                    <input type="password" name="password" class="input-line" id="">
                </div>
                <input type="submit" value="Enviar Datos" name="EnviarDatos" class="button-login">

                <!--<div id="Register" class="button-second">Registrarse</div>-->
            </form>
        </div>
